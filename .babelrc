{
  "env": {
    "development": {
      "ignore": ["node_modules/**/*"],
      "presets": ["es2015", "react", "stage-0"],
      "plugins": [
        "babel-plugin-transform-decorators-legacy",
        ["babel-plugin-root-import", { "rootPathSuffix": "src" }],
        ["transform-runtime"],
        ["transform-flow-strip-types"]
      ]
    },

    "test": {
      "ignore": ["node_modules/**/*"],
      "presets": ["es2015", "react", "stage-0"],
      "plugins": [
        "babel-plugin-transform-decorators-legacy",
        ["babel-plugin-root-import", { "rootPathSuffix": "src" }],
        ["transform-runtime"],
        ["transform-flow-strip-types"]
      ]
    },

    "assemble-packages": {
      "ignore": ["node_modules/**/*"],
      "presets": ["es2015", "react", "stage-0"],
      "plugins": [
        "babel-plugin-transform-decorators-legacy",
        ["module-resolver", { "root": ["./src"], "alias": { "~": "@valaa" } }],
        ["transform-runtime"],
        ["transform-flow-strip-types"]
      ]
    }
  }
}
