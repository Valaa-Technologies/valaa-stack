{
  "env": {
    "development": {
      "ignore": ["node_modules/**/*"],
      "presets": ["es2015", "react", "stage-0"],
      "plugins": [
        "babel-plugin-transform-decorators-legacy",
        ["babel-plugin-relative-import", { "rootPathSuffix": "src" }],
        ["babel-root-import", { "rootPathSuffix": "src" }],
        ["transform-runtime"],
        ["transform-flow-strip-types"]
      ]
    },

    "test": {
      "ignore": ["node_modules/**/*"],
      "presets": ["es2015", "react", "stage-0"],
      "plugins": [
        "babel-plugin-transform-decorators-legacy",
        ["babel-plugin-relative-import", { "rootPathSuffix": "src" }],
        ["babel-root-import", { "rootPathSuffix": "src" }],
        ["transform-runtime"],
        ["transform-flow-strip-types"]
      ]
    }
  }
}
